---
// src/components/Button.astro

interface Props {
  variant?: "primary" | "secondary" | "ghost";
  size?: "sm" | "md" | "lg";
  href?: string;
  class?: string;
}

const {
  variant = "primary",
  size = "md",
  href,
  class: className,
} = Astro.props;

const baseClasses = "inline-flex items-center justify-center font-bold rounded-lg transition-all duration-300";

const variants = {
  primary: "bg-white text-black hover:bg-accent-hover hover:shadow-lg hover:shadow-white/10 btn-shimmer",
  secondary: "bg-transparent text-white border border-white hover:bg-white hover:text-black btn-shimmer",
  ghost: "bg-transparent text-text-secondary hover:text-text-primary",
};

const sizes = {
  sm: "text-sm px-4 py-2",
  md: "text-sm px-6 py-3",
  lg: "text-body px-8 py-4",
};

const classes = [baseClasses, variants[variant], sizes[size], className].filter(Boolean).join(" ");

const Tag = href ? "a" : "button";
---

<Tag href={href} class={classes}>
  <slot />
</Tag>
