---
// src/components/Footer.astro

const socialLinks = [
  { label: "Twitter", href: "#" },
  { label: "LinkedIn", href: "#" },
  { label: "YouTube", href: "#" },
];

const currentYear = new Date().getFullYear();
---

<footer class="bg-navy-950 border-t border-navy-700/50">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-text-tertiary text-sm">
        &copy; {currentYear} Elevateo Co. All rights reserved.
      </p>
      <div class="flex items-center gap-6">
        {socialLinks.map((link) => (
          <a
            href={link.href}
            class="text-text-tertiary hover:text-text-primary text-sm transition-colors duration-200"
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
